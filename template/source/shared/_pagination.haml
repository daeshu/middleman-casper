- locals = current_resource.metadata[:locals]
- prev_page = locals['prev_page']
- page_number = locals['page_number']
- num_pages = locals['num_pages']
- next_page = locals['next_page']

%nav.pagination{role: :pagination}
  - if prev_page
    = link_to "← #{t('pagination.prev')}", prev_page, class: 'newer-posts'
  %span.page-number= t('pagination.page', current: page_number, count: num_pages)
  - if next_page
    = link_to "#{t('pagination.next')} →", next_page, class: 'older-posts'
